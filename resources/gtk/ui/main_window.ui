<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="AdwApplicationWindow" id="MainWindow">
    <property name="default-width">720</property>
    <property name="default-height">480</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">Sticky Notes</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="root_box">
            <property name="orientation">vertical</property>
            <property name="vexpand">true</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox" id="search_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="placeholder-text">Notlarda ara…</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="btn_new">
                    <property name="label">+ Ekle</property>
                    <property name="tooltip-text">Yeni Not</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="btn_trash">
                    <property name="icon-name">user-trash-symbolic</property>
                    <property name="tooltip-text">Çöp Kutusu</property>
                  </object>
                </child>
                <child>
                  <object class="GtkMenuButton" id="menu_button">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text">Menü</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <!-- Table Header -->
              <object class="GtkBox" id="table_header">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-bottom">4</property>
                <style>
                  <class name="dim-label"/>
                </style>
                <child>
                  <object class="GtkMenuButton" id="btn_sort">
                    <property name="icon-name">view-sort-ascending-symbolic</property>
                    <property name="tooltip-text">Sıralama</property>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="lbl_header_name">
                    <property name="label">Not Adı</property>
                    <property name="xalign">0</property>
                    <property name="hexpand">true</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="lbl_header_modified">
                    <property name="label">Değiştirilme</property>
                    <property name="xalign">0</property>
                    <property name="width-chars">17</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="lbl_header_created">
                    <property name="label">Oluşturulma</property>
                    <property name="xalign">0</property>
                    <property name="width-chars">17</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="lbl_header_actions">
                    <property name="label">Eylemler</property>
                    <property name="xalign">0</property>
                    <property name="width-chars">10</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkListView" id="notes_list">
                    <property name="margin-start">4</property>
                    <property name="margin-end">4</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
